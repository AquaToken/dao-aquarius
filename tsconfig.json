{
    "include": ["**/*.ts", "**/*.tsx"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2022",
        "resolveJsonModule": true,
        "module": "CommonJS",
        "baseUrl": "./src",
        "paths": {
            // TODO: refactor project structure
            "api/*": ["api/*"],
            "assets/*": ["common/assets/*"],
            "constants/*": ["constants/*"],
            "helpers/*": ["common/helpers/*"],
            "hooks/*": ["common/hooks/*"],
            "services/*": ["common/services/*"],
            "selectors/*": ["selectors/*"],
            "store/*": ["store/*"],
            "types/*": ["types/*"],

            // components
            "basics/*": ["common/basics/*"],
            "components/*": ["web/components/*"],
            "modals/*": ["common/modals/*"],
            "pages/*": ["pages/*"]
        }
    }
}
